                        <materialDesign:PackIcon Kind="Close"></materialDesign:PackIcon>
                    </Button>

                    <Button x:Name="logIn" Margin="5 30" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFlatButton}" Height="Auto" Click="logIn_Click">

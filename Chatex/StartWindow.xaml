        xmlns:local="clr-namespace:Chatex" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="StartWindow" 
        Height="400"
        Width="700" Loaded="Window_Loaded"
        >

    <Grid  Background="{StaticResource PrimaryHueDarkBrush}">
        

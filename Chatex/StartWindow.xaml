        <StackPanel 
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="250"
            >
            
            <!--Login TextBox-->
            <TextBox 
                x:Name="loginTextBox" 
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                materialDesign:HintAssist.Hint ="LOGIN" 
                FontSize="14" 
                Foreground="White" 
                Height="50">
                
            </TextBox>
            
            
            <!--Password PasswordBox-->
            <PasswordBox
                x:Name="passwordPasswordBox" 
                materialDesign:HintAssist.Hint ="PASSWORD"
                Foreground="White" 
                FontSize="14" 
                Height="50">
                
            </PasswordBox>

            
            <!--Sign In Button-->
            <Button x:Name="signIn" Style="{StaticResource MaterialDesignFlatButton}" Height="60" Click="SignIn_Click">
                <materialDesign:PackIcon 
                    Kind="LoginVariant" 
                    Foreground="FloralWhite" 
                    Width="100"
                    Height="40"
                    >
                </materialDesign:PackIcon>
            </Button>
        </StackPanel>
    </Grid>
</Window>
